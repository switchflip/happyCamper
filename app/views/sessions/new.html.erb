<h1>Login</h1>
<p>Fill in your information below</p>
<hr>

<%= form_tag sessions_path, :method => :post do %>

  <div class="field">
    <%= label_tag :email%>
    <%= text_field_tag :email, '', placeholder: "E-mail Address"%>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, '', placeholder: "Password" %>
  </div>
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>
  </div>
  <div class="actions">
    <%= submit_tag "Log in", :class => 'btn btn-primary' %>
  </div>
  
<% end %>
