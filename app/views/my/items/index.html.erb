<h1><%= current_user.first_name.possessive %> inventory</h1>
<hr>

<div class="row">
  <div class="span12">
    <p>
      <input class="search-query" type="text" placeholder="Search">
    </p>
    <!--  link_to "Add Item", new_my_item_path, id: "new_item", :class => "btn btn-success" -->
    <p>
      <button id="new_item_btn" class="btn btn-success">Add Item</button>
    </p>
      <div class="hide">
        <%= form_for [:my, @item], :remote => true do |f|%>
        <%= render "form", :f => f%>
        <%= f.submit "Submit", class: "btn btn-primary", :id => "add_item" %>
        <% end %>
      </div>
  </div>
</div> <!-- end .row -->

<br/>
<br/>

<div class="row">
<div class="span12">
  <table class="table table-striped table-bordered table-condensed" id="items-table">
    <tr>
      <th>Item</th>
      <th>Quanity</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <% @user.items.all.each do |item| %>
      <%= render "item", :item => item %>
    <% end %>


  </table>

</div> <!-- end .span12 -->
</div> <!-- end .row -->

<div class="clearfix"></div>

<div class="row">
  <div class="span12">
    <%= link_to "Home", root_path, :class => "btn btn-primary pull-right" %>
    <br/>
    <br/>
  </div>
</div> <!-- end .row -->