<h1><%= current_user.first_name.possessive %> inventory</h1>
<hr>

<div class="span12">
  <input class="search-query" type="text" placeholder="Search inventory">
</div>

<br/>
<br/>

<table class="table table-striped table-bordered table-condensed span12">
  <tr>
    <th>Item</th>
    <th>Quanity</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @user.items.each do |item| %>
    <tr>
      <td class="name"><%= item.name %></td> 
      <td><%= item.quanity %></td>
      <td><%= link_to "Edit", edit_my_item_path(item) %></td>
      <td><%= link_to "Remove", my_item_path(item), method: :delete, data: {confirm: 'Are you sure?'}%></td>
  <% end %>
</table>

<div class="clearfix"></div>

<div class="span2">
  <%= link_to "Add Item", new_my_item_path, :class => "btn btn-primary" %>
  <br/>
  <br/>
  <%= link_to "Back", root_path, :class => "btn btn-primary" %>
</div>