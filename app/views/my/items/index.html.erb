<h1>Your inventory</h1>
<hr>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Item</th>
    <th>Quanity</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @user.items.each do |item| %>
    <tr>
      <td><%= item.name %></td> 
      <td><%= item.quanity %></td>
      <td><%= link_to "Edit", edit_my_item_path(item) %></td>
      <td><%= link_to "Delete", my_item_path(item), method: :delete, data: {confirm: 'Are you sure?'}%></td>
  <% end %>
</table>

<hr>

<div class="pull-left">
  <%= link_to "add item", new_my_item_path, :class => "btn btn-primary" %>
</div>
