<h1><%= current_user.first_name.possessive %> inventory</h1>
<hr>

<div class="row">
  <div class="span12">
    <input class="search-query" type="text" placeholder="Search inventory">
  </div>
</div> <!-- end .row -->

<br/>
<br/>

<div class="row">
<div class="span12">
  <table class="table table-striped table-bordered table-condensed span12">
    <tr>
      <th>Item</th>
      <th>Quanity</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <% @user.items.each do |item| %>
      <tr>
        <td class="name"><%= item.name %></td> 
        <td><%= item.quanity %></td>
        <td><%= link_to "Update", 
                edit_my_item_path(item),
                :class => "btn btn-success" %>
        </td>
        <td><%= link_to "Delete",
                 my_item_path(item), 
                 :class => "btn btn-danger",
                 method: :delete, data: {confirm: 'Are you sure?'}%>
        </td>
    <% end %>
  </table>
</div>
</div> <!-- end .row -->

<div class="clearfix"></div>

<div class="row">
  <div class="span12">
    <%= link_to "Add Item", new_my_item_path, :class => "btn btn-success" %>
    <%= link_to "Back", root_path, :class => "btn btn-primary pull-right" %>
    <br/>
    <br/>
  </div>
</div> <!-- end .row -->