<h1><%= @user.first_name.possessive %> Trips</h1>
<hr>

<div class="row">
  <div class="span12">
    <input class="search-query" type="text" placeholder="Search trips">
  </div>
</div>

<br/>
<br/>
<div class="row">
  <table class="table table-striped table-bordered table-condensed span12">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>View</th>
    </tr>

    <% @user.trips.each do |trip| %>
      <tr>
        <td class="name"><%= trip.title %></td>
        <td>
          <%= trip.description %>
            <p><%= pluralize(trip.users.count, "person")%> on this trip</p>
        </td>
        <td><%= link_to "View",
                my_trip_path(trip),
                :class => "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </table>
</div> <!-- end row -->
<hr class="clearfix">

<div class="row">
  <div class="span12">
    <%= link_to "New Trip", new_my_trip_path, :class => "btn btn-success" %>
    <%= link_to "Back", root_path, :class => "btn btn-primary pull-right" %>
    <br/>
    <br/>
</div>


