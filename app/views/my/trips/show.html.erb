<div class="container">
  <div class="row">
    <div class="span8">
       <h1><%= @trip.title %></h1>  
       <hr>
      <h5>Desription</h5>
      <p><%= @trip.description %></p>
    <p>Starting on <%= @trip.start_date.strftime('%B %e') %> and ending on <%= @trip.end_date.strftime('%B %e') %>.</p>
      <% if @trip.users.count > 1 %>
        <h4>People On This Trip</h4>
        <ul>
          <% @trip.users.each do |user| %>
            <li><%= user.email %></li>
          <% end %>
        </ul>
      <% end %>
      <div>
        <%= link_to "Back", my_trips_path, :class => "btn btn-primary" %>
      </div>
    </div>

    <div class="span4">
      <h4>People on this Trip</h4>
      <ul>
        <% @trip.users.each do |user| %>
          <li><%= user.email %></li>
        <% end %>
      </ul>

      <%= form_tag invite_my_trip_path(@trip), :method => :post do %>
        <%= text_field_tag :email%>
        <%= submit_tag "Invite", :class => "btn" %>
      <% end %>
      



    </div>
  </div>
</div>
