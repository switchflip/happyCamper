<div class="container">
  <div class="row">
    <div class="span8">
       <h1><%= @trip.title %></h1>  
       <hr>
      <h5>Desription</h5>
      <p><%= @trip.description %></p>
      <h5>Dates</h5>
      <p>Starts <%= @trip.start_date.strftime('%B %e, %Y') %> and ends on <%= @trip.end_date.strftime('%B %e, %Y') %>.</p>
      <% if @trip.users.count > 1 %>
        <h5>People On This Trip</h5>
        <ul>
          <% @trip.users.each do |user| %>
            <li><%= user.first_name %> <%= user.last_name%></li>
          <% end %>
        </ul>
      <% end %>

      <div>
        <%= link_to "Back", my_trips_path, :class => "btn btn-primary" %>
      </div>

    </div> <!-- end .span8 -->

    <div class="span4">
      <h4>The more the merrier!</h4>
      <p>Enter the email address of who you would like to invite.</p>

      <%= form_tag invite_my_trip_path(@trip), :method => :post do %>
        <%= text_field_tag :email%>
        <%= submit_tag "Invite!", :class => "btn btn-success" %>
      <% end %>

    </div>
  </div> <!-- end .row -->
</div> <!-- end .container -->
